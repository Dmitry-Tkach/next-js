{
	"extends": [
		"stylelint-config-recommended",
		"stylelint-config-idiomatic-order"
	],
	"rules": {
		"selector-pseudo-className-no-unknown": [
			true,
			{
			  "ignorePseudoclassNamees": ["global"]
			}
		  ],
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind"
				]
			}
		]
	}
}